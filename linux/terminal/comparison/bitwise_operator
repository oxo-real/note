bitwise operator

a	0	0	1	1
b	0	1	0	1

and	0	0	0	1

or	0	1	1	1

not(a)	1	1	0	0

xor	0	1	1	0

bitshift
	left
	right


# examples

a	1	0	0	0	a		= 0b01000 = 0d00008
b	0	1	1	0	b		= 0b00110 = 0d00006

and	0	0	0	0	$(( a & b )) 	= 0b00000 = 0d00000

or	1	1	1	0	$(( a | b )) 	= 0b01110 = 0d00014

not(a)	0	1	1	1	$(( ~a ))    	= 0b00111 = 0d00007

xor	1	1	1	0	$(( a ^ b )) 	= 0b01110 = 0d00014

bitshift
	left				$(( a << 1 ))	= 0b10000 = 0d00016
	right				$(( a >> 2 )) 	= 0b00010 = 0d00002